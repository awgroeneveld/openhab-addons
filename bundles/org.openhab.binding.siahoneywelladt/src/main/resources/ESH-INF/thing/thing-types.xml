<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="siahoneywelladt" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0" xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<bridge-type id="serialbridge">
		<label>Honeywell/ADT Serial Bridge</label>
		<description>Serial Bridge</description>
		<properties>
			<property name="vendor">Art Groeneveld</property>
		</properties>

		<config-description>
			<parameter name="password" type="text" required="false">
				<context>password</context>
				<label>Password</label>
				<description>The Password to login to the Alarm system through RS232.</description>
				<default>user</default>
			</parameter>
			<parameter name="serialPort" type="text" required="true">
				<label>Serial Or USB Port</label>
				<context>serial-port</context>
				<limitToOptions>false</limitToOptions>
				<description>The name of the serial port used to connect to the Honeywell/ADT SIA device</description>
			</parameter>
			<parameter name="bitrate" type="integer">
				<label>Bitrate</label>
				<default>57600</default>
				<description>Speed of the serial connection, remember to set in panel.</description>
			</parameter>
			<parameter name="discovery" type="boolean">
				<label>Enable Discovery</label>
				<description>Enable automatic discovery of zones</description>
				<default>false</default>
			</parameter>
			<parameter name="dipSwitch8" type="boolean">
				<label>Dip Switch 8</label>
				<description>Dip Swicth setting on Galaxy Board</description>
				<default>false</default>
			</parameter>
			<parameter name="pollPeriod" type="integer" required="false" min="1" max="15">
				<label>Poll Period</label>
				<description>The Poll Period (minutes).</description>
				<default>5</default>
			</parameter>
		</config-description>
	</bridge-type>

	<!-- virtual controller -->

	<thing-type id="area">
		<supported-bridge-type-refs>
			<bridge-type-ref id="serialbridge"/>
		</supported-bridge-type-refs>

		<label>Honeywell/ADT Area</label>
		<description>Represents a controllable area within a Honeywell/ADT Alarm System.</description>

		<channels>
			<channel id="message" typeId="message">
				<label>Area Message</label>
				<description>Last message sent for this area.</description>
			</channel>
			<channel id="armState" typeId="armState">
				<label>Area armed State</label>
				<description>Area armed State (Armed, Partially Armed, Unarmed).</description>
			</channel>
			<channel id="armed" typeId="status">
				<label>Area armed Status</label>
				<description>Area armed status (ON=Armed, OFF=Disarmed).</description>
			</channel>
			<channel id="inAlarm" typeId="status">
				<label>Area in Alarm</label>
				<description>Area in Alarm</description>
			</channel>
			<channel id="alarmState" typeId="alarmState">
				<label>Alarm State</label>
				<description>Alarm state (NORMAL, IN_ALARM, RESET_REQUIRED)</description>
			</channel>
			<channel id="openingClosingMode" typeId="message">
				<label>Partition Opening/Closing Mode</label>
				<description>Partition Opening/Closing Mode ("User Closing", "Special Closing", "Partial Closing", "User
					Opening",
					"Special Opening")
				</description>
			</channel>
		</channels>

		<config-description>
			<parameter name="letter" type="text" required="true" pattern="[A-D]">
				<label>Area Letter</label>
				<description>The Area Letter Indicator (A-D).</description>
				<default>A</default>
			</parameter>
			<parameter name="number" type="integer" required="true" min="1" max="8">
				<label>Area Number</label>
				<description>The Area Number (1-8).</description>
				<default>1</default>
			</parameter>
		</config-description>
	</thing-type>

	<thing-type id="zone">
		<supported-bridge-type-refs>
			<bridge-type-ref id="serialbridge"/>
		</supported-bridge-type-refs>

		<label>Zone</label>
		<description>Represents a physical device such as a door, window, or motion sensor.</description>

		<channels>
			<channel id="status" typeId="zoneStatus">
				<label>Zone Status</label>
				<description>Zone Status (Open/Closed)</description>
			</channel>
			<channel id="message" typeId="message">
				<label>Zone Message</label>
				<description>Zone Message</description>
			</channel>
			<channel id="bypassMode" typeId="zoneBypassMode">
				<label>Zone Bypass Mode</label>
				<description>Zone Bypass Mode (OFF=Armed, ON=Bypassed)</description>
			</channel>
			<channel id="inAlarm" typeId="status">
				<label>Zone in Alarm</label>
				<description>Zone In Alarm</description>
			</channel>
			<channel id="tamper" typeId="status">
				<label>Zone Tamper</label>
				<description>Zone Tamper</description>
			</channel>
			<channel id="fault" typeId="status">
				<label>Zone Fault</label>
				<description>Zone Fault</description>
			</channel>
			<channel id="masked" typeId="status">
				<label>Zone Masked</label>
				<description>Zone Masked</description>
			</channel>
			<channel id="detailedStatus" typeId="zoneDetailedStatus">
				<label>Zone Detailed Status</label>
				<description>Zone detailed status (TAMPER_SC, TAMPER_OC, TAMPER_CV, LOW_RESISTANCE, HIGH_RESISTANCE, CLOSED, OPEN, MASKED, FAULT)</description>
			</channel>
		</channels>

		<config-description>
			<parameter name="areaLetter" type="text" pattern="[A-D]" required="false">
				<label>Area Letter</label>
				<description>The Area Letter (A-D).</description>
				<default>A</default>
			</parameter>
			<parameter name="areaNumber" type="integer" min="1" max="8" required="false">
				<label>Area Number</label>
				<description>The Area Number (1-8).</description>
				<default>1</default>
			</parameter>
			<parameter name="rioLineNumber" type="integer" required="true" min="1" max="4">
				<label>Rio Line #</label>
				<description>The Line Number the Rio is connected to (1-4)</description>
			</parameter>
			<parameter name="rioNumber" type="integer" required="true" min="0" max="15">
				<label>Rio Number</label>
				<description>The RIO number in the line (0-15)</description>
			</parameter>
			<parameter name="zoneNumber" type="integer" required="true" min="1" max="8">
				<label>Zone Number</label>
				<description>The Zone Number (1-8).</description>
			</parameter>
			<parameter name="type" type="text">
				<label>Zone type</label>
				<description>Specific type of input zone</description>
				<limitToOptions>true</limitToOptions>
				<options>
					<option value="CONTACT">Contact</option>
					<option value="PIR">PIR sensor</option>
					<option value="SMOKE">Smoke sensor</option>
				</options>

			</parameter>

		</config-description>
	</thing-type>

	<!-- common -->
	<channel-type id="message">
		<item-type>String</item-type>
		<label>Message</label>
		<description>Message Received</description>
		<state pattern="%s" readOnly="true"/>
	</channel-type>

	<!-- area -->
	<channel-type id="armState">
		<item-type>String</item-type>
		<label>Arm State</label>
		<description>Arm State</description>
		<state pattern="%d" readOnly="true">
			<options>
				<option value="UNARMED">Unarmed</option>
				<option value="ARMED">Armed</option>
				<option value="PARTIALLY_ARMED">Partially Armed</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="alarmState">
		<item-type>String</item-type>
		<label>Arm State</label>
		<description>Arm State</description>
		<state pattern="%d" readOnly="true">
			<options>
				<option value="NORMAL">Normal</option>
				<option value="IN_ALARM">In Alarm</option>
				<option value="RESET_REQUIRED">Reset Required</option>
			</options>
		</state>
	</channel-type>

	<!--	 zone -->
	<channel-type id="zoneStatus">
		<item-type>Contact</item-type>
		<label>Zone Status</label>
		<description>Zone Status (Open/Closed)</description>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="zoneBypassMode">
		<item-type>Switch</item-type>
		<label>Bypass Mode</label>
		<description>Bypass Mode (OFF=Armed, ON=Bypassed)</description>
	</channel-type>

	<channel-type id="zoneDetailedStatus">
		<item-type>String</item-type>
		<label>Zone Detail State</label>
		<description>Zone Detail State</description>
		<state pattern="%d" readOnly="true">
			<options>
				<option value="TAMPER_SC">Tamper SC</option>
				<option value="TAMPER_OC">Tamper OC</option>
				<option value="TAMPER_CV">Tamper CV</option>
				<option value="RESISTANCE_LOW">Low Resistance</option>
				<option value="RESISTANCE_HIGH">High Resistance</option>
				<option value="CLOSED">Closed</option>
				<option value="OPEN">Open</option>
				<option value="MASKED">Masked</option>
				<option value="FAULT">Fault</option>
			</options>
		</state>
	</channel-type>

